<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"	
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<augsec.augsec.non_ar_files.NonArGLSurfaceView
		android:id="@+id/gl_surface_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />
	<LinearLayout		
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|center_horizontal"
		android:orientation="horizontal">
		<Button
			android:id="@+id/button_increase_plus"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="match_parent"					
			android:text="@string/non_ar_view_increase_plus" />
		<Button
			android:id="@+id/button_increase"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="match_parent"					
			android:text="@string/non_ar_view_increase" />
		<Button
			android:id="@+id/button_decrease"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="match_parent"					
			android:text="@string/non_ar_view_decrease" />
		<Button
			android:id="@+id/button_decrease_plus"
			android:layout_width="1dp"
			android:layout_weight="1"
			android:layout_height="match_parent"					
			android:text="@string/non_ar_view_decrease_plus" />
	</LinearLayout>

</FrameLayout>
